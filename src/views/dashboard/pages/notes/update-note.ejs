<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update Note</title>
    <link rel="stylesheet" type="text/css" href="/style.css">
    <link rel="stylesheet" type="text/css" href="/dashboard/pages/notes/update-note.css">
</head>
<body>
<div class="note-container">
    <form id="update-note-form" method="POST" action="/notes/update/<%= noteIdParam %>">
        <h1>Edit Note</h1>
        <div class="row">
            <div class="input-group">
                <label for="note_title">Title</label>
                <input type="text" id="note_title" name="note_title" value="<%= noteTitle %>">
                <span class="message"></span>
            </div>
        </div>
        <div class="row">
            <div class="input-group">
                <label for="category_id">Category</label>
                <select id="category_id" name="category_id">
                    <% for (let i = 0; i < categories.length; i++) {
                        let selected = ( categories[i].id === categoryId ) ? "selected" : "";
                    %>
                    <option value="<%= categories[i].id %>" <%=selected %>> <%= categories[i].category_name %></option>
                    <% } %>
                </select>
            </div>
            <div class="input-group">
                <label for="tag_id">Tag</label>
                <select id="tag_id" name="tag_id">
                    <% for (let i = 0; i < tags.length; i++) {
						let selected = ( tags[i].id === tagId ) ? "selected" : "";
                    %>
                    <option value="<%= tags[i].id %>" <%= selected %>> <%= tags[i].tag_name %></option>
                    <% } %>
                </select>
            </div>
        </div>
        <div class="row">
            <div class="input-group">
                <label for="note_body">Body</label>
                <textarea id="note_body" name="note_body"><%= noteBody %></textarea>
            </div>
        </div>
        <div class="form-footer">
            <button type="submit">Update Note</button>
        </div>
    </form>
</div>
</body>
</html>